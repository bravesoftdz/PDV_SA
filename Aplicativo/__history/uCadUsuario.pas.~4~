begin
  Close;
end;

procedure TfrmCadUsuario.DBEdit6KeyPress(Sender: TObject; var Key: Char);
begin
  if Key = #13 then
  begin
    Key := #0;
    Perform(WM_NEXTDLGCTL, 0, 0);
  end
  else if Key = #32 then
  begin
    Key := #0;
    SpeedButton2Click(self);
  end;
end;

procedure TfrmCadUsuario.VerificaGrupoLoja;
begin
  if DBEdit6.Text <> '' then
  begin
    if DBEdit4.Text <> ''then
    begin
        DM.cdsDinamica.Close;
        DM.cdsDinamica.IndexFieldNames:='';
        DM.cdsDinamica.CommandText:=' SELECT L.ID_LOJA FROM TB_LOJAS L '+
                                    ' WHERE L.ID_GRUPO_LOJA ='+DBEdit6.Text+
                                    ' AND L.ID_LOJA = '+DBEdit4.Text;
        DM.cdsDinamica.Open;

        if DM.cdsDinamica.IsEmpty then
        begin
          Application.MessageBox('Loja Não Faz Parte do Grupo Informado. Favor Verificar.','Atenção!!!!',MB_OK+MB_ICONWARNING);
          DBEdit4.SetFocus;
        end
        else
        begin
         DBE_SENHA.SetFocus;
        end;
    end;
  end
  else
  begin
    DBE_SENHA.SetFocus;
  end;
end;

end.
